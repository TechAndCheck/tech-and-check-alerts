{
  "name": "tech-and-check-alerts",
  "version": "1.1.0",
  "description": "Send a daily tip sheet for fact checkers.",
  "main": "index.js",
  "repository": "git@github.com:TechAndCheck/tech-and-check-alerts.git",
  "author": "Bad Idea Factory <biffuddotcom@biffud.com>",
  "license": "MIT",
  "scripts": {
    "parcel:dev": "./node_modules/.bin/parcel src/client/index.html",
    "parcel:watch": "./node_modules/.bin/parcel watch src/client/index.html",
    "parcel:build": "./node_modules/.bin/parcel build src/client/index.html",
    "start-node": "nodemon --watch src --exec yarn babel-node -- src/server/index.js",
    "start": "concurrently 'yarn start-node' 'yarn parcel:dev'",
    "build": "babel src -d lib",
    "lint": "./node_modules/.bin/eslint 'src/**/*.js'",
    "test": "jest --verbose --coverage",
    "test:watch": "jest --verbose --watch",
    "migrate": "sequelize db:migrate",
    "queue:jobs:list": "babel-node -- src/scripts/listScheduledJobs",
    "queue:jobs:schedule": "babel-node -- src/scripts/scheduleJobs",
    "queue:jobs:unschedule": "babel-node -- src/scripts/unscheduleJobs",
    "mailer:send-test": "babel-node -- src/scripts/sendTestEmail"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "babel-eslint": "^10.0.1",
    "concurrently": "^4.1.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "jest": "^24.8.0",
    "nodemon": "^1.19.0",
    "parcel": "^1.12.3"
  },
  "dependencies": {
    "bull": "^3.9.1",
    "cheerio": "^1.0.0-rc.3",
    "dotenv": "^8.0.0",
    "mailgun-js": "^0.22.0",
    "pg": "^7.10.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "sequelize": "^5.8.5"
  },
  "jest": {
    "cacheDirectory": "./.jestcache"
  }
}
